/*--------------------Patches--------------------*/

// Demon Lord no longer immune to +4 enchanted weapons
COPY_EXISTING ~uddemon.cre~ ~override~
  PATCH_IF (SOURCE_SIZE > 0x2d3) BEGIN
    READ_LONG 0x2a0 known_spells_off
    READ_LONG 0x2a8 spell_memorisation_info_off
    READ_LONG 0x2b0 memorised_spells_off
    READ_LONG 0x2b8 item_slots_off
    READ_LONG 0x2bc items_off
    READ_LONG 0x2c4 effects_off
    READ_LONG 0x2c8 num_effects
    
    SET num_deleted = 0
    FOR (i = 0; i < num_effects; i = i + 1) BEGIN
      READ_LONG (effects_off + 0x108*i + 0x08) opcode
      READ_LONG (effects_off + 0x108*i + 0x14) param1
      READ_LONG (effects_off + 0x108*i + 0x18) param2
      
      PATCH_IF (opcode == 120 && param2 == 0 && param1 == 4) BEGIN // protection from +4 melee weapons
        DELETE_BYTES (effects_off + 0x108*i) 0x108
        SET num_deleted += 1 // increment counter
        SET num_effects -= 1 // decrement number of effects
        SET i -= 1 // do this iteration of the loop again since the next effect will now be at this offset
      END
    END
    
    // if we deleted any
    PATCH_IF (num_deleted > 0) BEGIN
      // clean up offsets
      PATCH_IF (known_spells_off > effects_off) BEGIN
        WRITE_LONG 0x2a0 (known_spells_off - 0x108*num_deleted)
      END
      PATCH_IF (spell_memorisation_info_off > effects_off) BEGIN
        WRITE_LONG 0x2a8 (spell_memorisation_info_off - 0x108*num_deleted)
      END
      PATCH_IF (memorised_spells_off > effects_off) BEGIN
        WRITE_LONG 0x2b0 (memorised_spells_off - 0x108*num_deleted)
      END
      PATCH_IF (item_slots_off > effects_off) BEGIN
        WRITE_LONG 0x2b8 (item_slots_off - 0x108*num_deleted)
      END
      PATCH_IF (items_off > effects_off) BEGIN
        WRITE_LONG 0x2bc (items_off - 0x108*num_deleted)
      END
      PATCH_IF (num_effects > effects_off) BEGIN
        WRITE_LONG 0x2c8 (num_effects - 0x108*num_deleted)
      END
      
      // update number of effects
      WRITE_LONG 0x2c8 num_effects
    END
  END
  BUT_ONLY

