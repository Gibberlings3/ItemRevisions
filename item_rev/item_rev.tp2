  LOAD_TRA ~item_rev/languages/english/masterwork.tra~
  LOAD_TRA ~item_rev/languages/%LANGUAGE%/masterwork.tra~
  INCLUDE ~item_rev/lib/descriptions.tpa~
  INCLUDE ~item_rev/components/masterwork.tpa~
END

