END ELSE BEGIN
  INCLUDE ~item_rev/lib/identify_item.tpa~
  INCLUDE ~item_rev/lib/store_rev_macros.tpa~
  COPY_EXISTING_REGEXP GLOB ~.*\.sto~ override
    LPF items_to_order END
  BUT_ONLY
END

